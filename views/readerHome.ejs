<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= blogTitle %> - Reader Home</title>

    <!-- Add a favicon for the website to avoid 404 error message -->
    <link rel="shortcut icon" href="#">

    <!-- Loading CSS -->
    <link rel="stylesheet" type="text/css" href="/main.css">
</head>
<body>
    <!-- ----------------------------------navbar------------------------------------------ -->
    <nav class="navbar">
        <h1>Reader Home Page</h1>
        <!-- ----------navbar Links----------- -->
        <ul>
            <li><a href="/">Main Home</a></li>
            <li class="active">Reader Home</li>
        </ul>
    </nav>
    <!-- ----------------------------------Blog------------------------------------------ -->   
        <% if (articles.length > 0) { %>
            <% articles.forEach(article => { %>
                <div class="article-item">
                    <h3><a href="/reader/article/<%= article.article_id %>"><%= article.title %></a></h3>
                    <p class="publication-date">
                        Article by: <%= article.author_name %>
                        Published on: <%= article.published_at %> PKT
                    </p>
                </div>
            <% }) %>
        <% } else { %>
            <p class="no-article-item">No articles to display.</p>
        <% } %>
</body>
</html>